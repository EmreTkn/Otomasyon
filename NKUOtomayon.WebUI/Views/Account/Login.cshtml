
@model LoginModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>

    @if (TempData["message"] != null)
    {
        <partial name="_ResultMessage" model="@(TempData.Get<AlertMessage>("message"))" />
    }

    <div class="mx-auto" style="margin-top: 10%;width: 400px">
        <h2>Öğrenci Otomasyona Giriş</h2>
        <button class="ml-5" onclick="document.getElementById('id01').style.display = 'block'" style="width: auto;">Öğrenci Otomasyona Giriş</button>
        <form class="mt-3 ml-5" action="http://nkuzem.nku.edu.tr/">
            <button style="width: auto">Uzaktan Eğitim Sistemi</button>
        </form>

    </div>
    <div id="id01" class="col-md-12 modal">

        <form class="modal-content animate col-md-4" asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="imgcontainer">
                <span onclick="document.getElementById('id01').style.display = 'none'" class="close" title="Close Modal">&times;</span>
                <img src="~/img/img1.png" alt="Avatar" class="avatar">
            </div>

            <div class="container">
                <label asp-for="UserName"><b>Okul Numaranız</b></label>
                <input asp-for="UserName" required="">

                <label asp-for="Password"><b>Password</b></label>
                <input asp-for="Password" required type="password">


                <select class="form-control" asp-for="Tanım">
                    <option>Öğrenci</option>
                    <option>Admin</option>
                </select>



                <button type="submit">Login</button>
                <label>
                    <input type="checkbox" checked="checked" name="remember"> Remember me
                </label>
            </div>

            <div class="container" style="background-color: #f1f1f1">
                <button type="button" onclick="document.getElementById('id01').style.display = 'none'" class="cancelbtn">Cancel</button>
                <span class="psw">Forgot <a href="#">password?</a></span>

            </div>
        </form>
    </div>

    @*dışarı tıklandığında model kapatmak için ufak bir script*@
    <script>

        var modal = document.getElementById('id01');
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>

</body>
</html>