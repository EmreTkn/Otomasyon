@model AddNewPdf

<form asp-controller="Teacher" asp-action="AddPdfForLesson" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="LessonCode"/>
    <div class="row">
        @if (Model.PdfFiles!=null)
        {
            <div class="col-md-8">
                @foreach (var item in Model.PdfFiles)
                {
                <div class="form-group row">
                    <label>@item.Name</label>
                    <a class="btn btn-primary btn-sm" href="@item.Url">Download</a>
                    <a class="btn btn-danger btn-sm"asp-controller="Teacher"asp-action="DeletePdfToLesson" asp-route-pdfId="@item.Id" >Delete</a>

                </div>
                }
            </div>
        }
        <div class="col-md-4">
            <div class="form-group row">
                <input type="file" name="file"/>
            </div>
            <div class="form-group row">
                <label asp-for="Name"></label>
                <input asp-for="Name"/>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</form>