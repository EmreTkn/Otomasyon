@model EditGradesFromTeacherModel

<h1 class="h3">Edit Grades</h1>
<hr>
<form asp-controller="Teacher" asp-action="EditStudentGrades" method="POST">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <input type="hidden" name="lessonCode" value="@Model.LessonCode">
            <input type="hidden" name="studentId" value="@Model.StudentId">

            <div class="form-group row">
                <label asp-for="LessonName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="form-control" asp-for="@Model.LessonName">@Model.LessonName</p>
                    <span asp-validation-for="LessonName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="MidTerm" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="MidTerm">
                    <span asp-validation-for="MidTerm" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FinalTerm" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FinalTerm">
                    <span asp-validation-for="FinalTerm" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="MakeUpExam" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="MakeUpExam">
                    <span asp-validation-for="MakeUpExam" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Average" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Average">
                    <span asp-validation-for="Average" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="LetterNote" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="LetterNote">
                    <span asp-validation-for="LetterNote" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FailedGrades" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FailedGrades">
                    <span asp-validation-for="FailedGrades" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FailedAbsenteeism" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FailedAbsenteeism">
                    <span asp-validation-for="FailedAbsenteeism" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </div>

        </div>
     
    </div>

</form>

@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}