@using Newtonsoft.Json
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NKUOtomayon.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @RenderSection("Css",false)
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"/>

</head>
<body>
    <header>
        @await Html.PartialAsync("_navbar")
    </header>
    <main class="mt-2">
        <div class="container ml-2">
            @if (TempData["message"] != null)
            {
                <partial name="_ResultMessage" model="@(TempData.Get<AlertMessage>("message"))"/>
            }
            <div class="row">
                <div class="col-md-2">
                    @await Html.PartialAsync("_selection")
                </div>
                <div  class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer class="footer" style=" position:sticky;
                                    
                                      width: 100%;
                                      white-space: nowrap;
                                      line-height: 60px;
                                  ">
            <div class="container mt-1 mb-0">
                &copy; 2020 - Namık Kemal Üniversitesi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </main>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
